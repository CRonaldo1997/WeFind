<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.c_ronaldo.we_finder.TinderActivity">

    <ImageView
        android:id="@+id/mPortraitImageView"
        android:layout_width="389dp"
        android:layout_height="321dp"
        app:srcCompat="@drawable/image1"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:onClick="onLikeClicked"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="LIKE"
        app:layout_constraintTop_toBottomOf="@+id/mPortraitImageView"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button3"
        android:onClick="onDislikeClicked"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="NO"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
